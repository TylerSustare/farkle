{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@assets/*": ["src/assets/*"], // to import from '@assets/icon.png'
      "@components": ["src/components"],
      "@config/*": ["src/config/*"],
      "@contexts": ["src/contexts"],
      "@hooks": ["src/hooks"],
      "@screens": ["src/screens"],
      "@utils": ["src/utils"]
    }
  }
}
